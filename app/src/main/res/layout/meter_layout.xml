<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meter_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLED" />

    <TextView
        android:id="@+id/txtStaticLocalBattery"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="Ladder Battery:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticMeterBattery" />

    <TextView
        android:id="@+id/txtStaticMeterBattery"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="Meter Battery:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticCO" />

    <TextView
        android:id="@+id/txtLocalBattery"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRemoteBatteryLevel" />

    <TextView
        android:id="@+id/txtRemoteBatteryLevel"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCarbonDioxideLevel" />

    <TextView
        android:id="@+id/txtDaysToCal"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Days to Calibration Due:"
        android:textColor="@color/colorBackground"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticInsertionCount" />

    <TextView
        android:id="@+id/txtStaticO2"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="02:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticLEL" />

    <TextView
        android:id="@+id/txtStaticH2SO4"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="H2S:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticO2" />

    <TextView
        android:id="@+id/txtStaticCO"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="CO:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticH2SO4" />

    <TextView
        android:id="@+id/txtStaticLEL"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="LEL:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <TextView
        android:id="@+id/txtOxygenLevel"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCombExLevel" />

    <TextView
        android:id="@+id/txtCarbonDioxideLevel"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHydrogenSulfideLevel" />

    <TextView
        android:id="@+id/txtCombExLevel"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <TextView
        android:id="@+id/txtHydrogenSulfideLevel"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOxygenLevel" />

    <TextView
        android:id="@+id/txtLED"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtID" />

    <TextView
        android:id="@+id/txtStaticInsertionCount"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="Insertion Count:"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStaticLocalBattery" />

    <TextView
        android:id="@+id/txtInsertionCount"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLocalBattery" />

    <ImageView
        android:id="@+id/imgSync"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_popup_sync" />

</android.support.constraint.ConstraintLayout>